<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- My theme -->
    <style name="myQcmTheme" parent="AppTheme">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/secondlyColor</item>
        <item name="android:textCursorDrawable">@drawable/green_cursor</item>
    </style>

    <!-- myQcm Theme noActionBar -->
    <style name="myQcmTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- myQcm Theme progressDialog -->
    <style name="myQcmProgressDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/primaryColor</item>
    </style>

    <style name="myQcmTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="myQcmTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
