<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iia.myqcm">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/myQcmTheme">
        <activity android:name=".view.ConnexionActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.CategoryListActivity"
            android:label="@string/title_activity_category_list"
            android:theme="@style/myQcmTheme.NoActionBar" />
        <activity
            android:name=".view.QcmListActivity"
            android:label="@string/title_activity_qcm_list"
            android:theme="@style/myQcmTheme.NoActionBar" />
        <activity android:name=".view.QuestionActivity" />
        <activity
            android:name=".view.ProfileActivity"
            android:label="@string/title_activity_profile"
            android:theme="@style/myQcmTheme.NoActionBar" />
        <activity
            android:name=".view.NavigationDrawerActivity"
            android:label="@string/title_activity_navigation_drawer"
            android:theme="@style/myQcmTheme.NoActionBar" />
        <activity android:name=".view.EndPageActivity"></activity>
    </application>

</manifest>
